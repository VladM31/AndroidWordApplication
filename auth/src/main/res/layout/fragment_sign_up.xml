<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/primary_back">

    <include
        android:id="@+id/toolBar"
        layout="@layout/tool_bar" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/up_menu_height"
        android:layout_marginBottom="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/menuGridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:useDefaultMargins="true"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="@dimen/input_width"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary_green"
                        app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                        app:boxStrokeWidth="2dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="15"
                        app:counterTextColor="@color/primary_green"
                        app:cursorColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"

                        tools:ignore="PrivateResource">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/phone_number"
                            android:inputType="phone"
                            android:textColor="@color/primary_green"

                            android:textSize="25sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="@dimen/input_width"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary_green"
                        app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                        app:boxStrokeWidth="2dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="60"
                        app:counterTextColor="@color/primary_green"
                        app:cursorColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"

                        tools:ignore="PrivateResource">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/password"
                            android:textColor="@color/primary_green"

                            android:textSize="25sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="@dimen/input_width"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary_green"
                        app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                        app:boxStrokeWidth="2dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="60"
                        app:counterTextColor="@color/primary_green"
                        app:cursorColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"

                        tools:ignore="PrivateResource">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/primary_green"

                            android:textSize="25sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="@dimen/input_width"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary_green"
                        app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                        app:boxStrokeWidth="2dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"
                        app:counterTextColor="@color/primary_green"
                        app:cursorColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"

                        tools:ignore="PrivateResource">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/first_name"
                            android:textColor="@color/primary_green"

                            android:textSize="25sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="@dimen/input_width"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary_green"
                        app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                        app:boxStrokeWidth="2dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"
                        app:counterTextColor="@color/primary_green"
                        app:cursorColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"

                        tools:ignore="PrivateResource">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/last_name"
                            android:textColor="@color/primary_green"

                            android:textSize="25sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/currency"
                        android:textAlignment="center"
                        android:textColor="@color/primary_green"
                        android:textSize="25sp" />


                    <Spinner
                        android:id="@+id/spinnerCurrency"
                        android:layout_width="@dimen/input_width"
                        android:layout_height="50dp"
                        android:background="@drawable/button_back"
                        android:padding="5dp"
                        android:textAlignment="center" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>


    </ScrollView>


    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/agree_checkbox_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_agree_to_the_terms_of_service"
        android:textSize="16sp"
        android:textColor="@color/primary_green"
        app:buttonTint="@color/primary_green"
        app:layout_constraintBottom_toTopOf="@+id/signUpSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/signUpSubmit"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/disable_back"
        android:text="@string/submit"
        android:textColor="@color/primary_back"
        android:textSize="30sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>