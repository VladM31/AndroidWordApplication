<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.WordAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/primary_back</item>
        <item name="android:statusBarColor">@color/primary_green</item>
    </style>



    <style name="DialogStyle" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:buttonBarButtonStyle">@color/primary_green</item>
        <item name="android:colorBackground">@color/primary_back</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textColorPrimary">@color/primary_green</item>
    </style>

    <style name="Spinner" >
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:backgroundTint">@color/primary_green</item>
        <item name="android:textSize">20sp</item>
        <item name="android:popupBackground">@color/primary_back</item>
    </style>

</resources>