<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="small_picture" >
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/primary_back</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:background">@color/primary_back</item>
    </style>
</resources>