<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_back"
    tools:context=".ui.fragments.pays.ChoosePayFragment">

    <include
        android:id="@+id/toolBar"
        layout="@layout/tool_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/googlePayBtn"
                android:layout_width="@dimen/menu_button_width"
                android:layout_height="70dp"
                android:background="@drawable/button_back"
                android:contentDescription="@string/google_pay"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/google_pay_dark" />


            <Button
                android:id="@+id/cardPayBtn"
                android:layout_width="@dimen/menu_button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_back"
                android:text="@string/card_pay"
                android:textAllCaps="false"
                android:textColor="@color/primary_back"
                android:textSize="@dimen/menu_button_text_size"
                app:backgroundTint="@null" />


        </LinearLayout>

    </ScrollView>

</FrameLayout>