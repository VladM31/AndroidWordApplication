<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_back"
    tools:context=".ui.fragments.words.WordsFragment">



    <include
        android:id="@+id/toolBar"
        layout="@layout/tool_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollViewContainer"
        android:layout_width="@dimen/input_width"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="@dimen/input_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="true"
                android:textAlignment="center"
                android:textColor="@color/primary_green"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/wordImage"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/word_custom_image"
                android:src="@drawable/image_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolBar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="It's not obligatory"
                android:textAlignment="center"
                android:textColor="@color/primary_green"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/deleteImageBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/delete_image_if_set"
                    android:scaleType="fitXY"
                    android:src="@drawable/delete"
                    app:layout_constraintBottom_toBottomOf="@+id/setImageBtn"
                    app:layout_constraintStart_toStartOf="@+id/wordImage"
                    app:layout_constraintTop_toTopOf="@+id/setImageBtn" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/resetImageBtn"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_back"
                    android:padding="0dp"
                    android:text="Reset image"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_back"
                    android:textSize="24sp"

                    app:backgroundTint="@null"
                    app:layout_constraintEnd_toEndOf="@+id/wordImage"
                    app:layout_constraintTop_toBottomOf="@+id/wordImage" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="@string/word_sound"
                android:textAlignment="center"
                android:textColor="@color/primary_green"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="It's not obligatory"
                android:textAlignment="center"
                android:textColor="@color/primary_green"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/deleteSoundBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/delete_image_if_set"
                    android:scaleType="fitXY"
                    android:src="@drawable/delete"
                    app:layout_constraintBottom_toBottomOf="@+id/setImageBtn"
                    app:layout_constraintStart_toStartOf="@+id/wordImage"
                    app:layout_constraintTop_toTopOf="@+id/setImageBtn" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/resetSoundBtn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_back"
                    android:padding="0dp"
                    android:text="Set"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_back"
                    android:textSize="24sp"
                    app:backgroundTint="@null"
                    app:layout_constraintEnd_toEndOf="@+id/wordImage"
                    app:layout_constraintTop_toBottomOf="@+id/wordImage" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/playSoundBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/delete_image_if_set"
                    android:scaleType="fitXY"
                    android:src="@drawable/sound"
                    app:layout_constraintBottom_toBottomOf="@+id/setImageBtn"
                    app:layout_constraintStart_toStartOf="@+id/wordImage"
                    app:layout_constraintTop_toTopOf="@+id/setImageBtn" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:id="@+id/saveChangesBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_back"
                android:text="Save changes"
                android:textAllCaps="false"
                android:textColor="@color/primary_back"
                android:textSize="24sp"
                app:backgroundTint="@null" />

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/previousBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/previous_word"
        android:scaleType="fitXY"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/nextBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="Next word"
        android:scaleType="fitXY"
        android:rotation="180"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/addAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add all"
        android:layout_marginTop="4dp"
        android:textColor="@color/primary_back"
        android:textSize="24sp"
        android:background="@color/primary_green"
        app:backgroundTint="@null"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/nextBtn"
        app:layout_constraintStart_toEndOf="@+id/previousBtn"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewContainer" />

    <TextView
        android:id="@+id/pageNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/primary_green"
        app:layout_constraintEnd_toEndOf="@+id/addAll"
        app:layout_constraintStart_toStartOf="@+id/addAll"
        app:layout_constraintTop_toBottomOf="@+id/addAll" />

    <include
        android:id="@+id/loading_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        layout="@layout/fragment_loading" />

</androidx.constraintlayout.widget.ConstraintLayout>