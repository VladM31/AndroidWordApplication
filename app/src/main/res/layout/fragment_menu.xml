<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/primary_back"
    android:layout_height="match_parent">


    <include
        android:id="@+id/navigationBar"
        layout="@layout/navigation_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="10dp"
     >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/viewWordsButton"
                android:layout_width="@dimen/menu_button_width"
                android:layout_marginTop="28dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="@string/words"
                android:textSize="@dimen/menu_button_text_size"
                android:textColor="@color/primary_back"
                android:background="@drawable/button_back"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/viewLearningWordsButton"
                android:layout_width="@dimen/menu_button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:text="@string/my_words"
                android:textSize="@dimen/menu_button_text_size"
                android:textColor="@color/primary_back"
                android:background="@drawable/button_back"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewWordsButton" />

            <Button
                android:id="@+id/addWordButton"
                android:layout_width="@dimen/menu_button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:text="Add word"
                android:textSize="@dimen/menu_button_text_size"
                android:textColor="@color/primary_back"
                android:background="@drawable/button_back"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewLearningWordsButton" />
        </LinearLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>