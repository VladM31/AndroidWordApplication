<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primary_back"
    android:layout_height="match_parent">


    <include
        android:id="@+id/navigationBar"
        layout="@layout/navigation_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/menuGridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                tools:ignore="UselessParent">

                <Button
                    android:id="@+id/wordsBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="fill_horizontal|center"
                    android:textAllCaps="false"
                    android:text="@string/words"
                    android:textSize="@dimen/menu_button_text_size"
                    android:textColor="@color/primary_back"
                    android:background="@drawable/button_back"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/myWordsBtn"
                    android:layout_width="@dimen/menu_button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:text="@string/my_words"
                    android:textSize="@dimen/menu_button_text_size"
                    android:textColor="@color/primary_back"
                    android:background="@drawable/button_back"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/addWordBtn"
                    android:layout_width="@dimen/menu_button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:text="@string/add_word"
                    android:textSize="@dimen/menu_button_text_size"
                    android:textColor="@color/primary_back"
                    android:background="@drawable/button_back"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/instructionBtn"
                    android:layout_width="@dimen/menu_button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:text="@string/instruction"
                    android:textSize="@dimen/menu_button_text_size"
                    android:textColor="@color/primary_back"
                    android:background="@drawable/button_back"
                    app:backgroundTint="@null" />
            </GridLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>