<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary_back"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolBar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textLayoutWord"
                android:layout_width="@dimen/input_width"
                android:layout_height="wrap_content"
                android:textColorHint="@color/primary_green"
                app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                app:boxStrokeWidth="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="255"
                app:counterTextColor="@color/primary_green"
                app:cursorColor="@color/primary_green"
                app:hintTextColor="@color/primary_green"
                tools:ignore="PrivateResource">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/word"
                    android:textColor="@color/primary_green"

                    android:textSize="25sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textLayoutTranslate"
                android:layout_width="@dimen/input_width"
                android:layout_height="wrap_content"
                android:textColorHint="@color/primary_green"
                app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                app:boxStrokeWidth="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="255"
                app:counterTextColor="@color/primary_green"
                app:cursorColor="@color/primary_green"
                app:hintTextColor="@color/primary_green"

                tools:ignore="PrivateResource">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTranslate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/translate"
                    android:textColor="@color/primary_green"

                    android:textSize="25sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textLayoutCategory"
                android:layout_width="@dimen/input_width"
                android:layout_height="wrap_content"
                android:textColorHint="@color/primary_green"
                app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                app:boxStrokeWidth="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="255"
                app:counterTextColor="@color/primary_green"
                app:cursorColor="@color/primary_green"
                app:hintTextColor="@color/primary_green"

                tools:ignore="PrivateResource">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/category"
                    android:textColor="@color/primary_green"

                    android:textSize="25sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textLayoutDescription"
                android:layout_width="@dimen/input_width"
                android:layout_height="wrap_content"
                android:textColorHint="@color/primary_green"
                app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                app:boxStrokeWidth="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="1000"
                app:counterTextColor="@color/primary_green"
                app:cursorColor="@color/primary_green"
                app:hintTextColor="@color/primary_green"

                tools:ignore="PrivateResource">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/description"
                    android:textColor="@color/primary_green"

                    android:textSize="25sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/word_language"
                android:textAlignment="center"
                android:textColor="@color/primary_green"
                android:textSize="25sp" />


            <Spinner
                android:id="@+id/spinnerWordLang"
                android:layout_width="@dimen/input_width"
                android:layout_height="50dp"
                android:padding="5dp"
                android:textAlignment="center"
                android:background="@drawable/button_back"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/translate_language"
                android:textAlignment="center"
                android:textColor="@color/primary_green"
                android:textSize="25sp" />

            <Spinner
                android:id="@+id/spinnerTranLang"
                android:layout_width="@dimen/input_width"
                android:layout_height="50dp"
                android:padding="5dp"
                android:textAlignment="center"
                android:background="@drawable/button_back"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cefr"
                android:textAlignment="center"
                android:textColor="@color/primary_green"
                android:textSize="25sp" />

            <Spinner
                android:id="@+id/spinnerCefr"
                android:layout_width="@dimen/input_width"
                android:layout_height="50dp"
                android:padding="5dp"
                android:background="@drawable/button_back"
                android:textAlignment="center" />

            <Space
                android:layout_width="0dp"
                android:layout_height="10dp" />

            <Switch
                android:id="@+id/switchGenerateSound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/generate_sound"

                android:textColor="@color/primary_green"
                android:textSize="28sp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <ImageView
                android:id="@+id/wordImage"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/word_custom_image"
                android:src="@drawable/image_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolBar" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/deleteImageBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/delete_image_if_set"
                    android:scaleType="fitXY"
                    android:src="@drawable/delete"
                    app:layout_constraintBottom_toBottomOf="@+id/setImageBtn"
                    app:layout_constraintStart_toStartOf="@+id/wordImage"
                    app:layout_constraintTop_toTopOf="@+id/setImageBtn" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/resetImageBtn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_back"
                    android:padding="0dp"
                    android:text="@string/set_image"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_back"
                    android:textSize="24sp"

                    app:backgroundTint="@null"
                    app:layout_constraintEnd_toEndOf="@+id/wordImage"
                    app:layout_constraintTop_toBottomOf="@+id/wordImage" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/wordSoundTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="@string/word_sound"
                android:textAlignment="center"
                android:textColor="@color/primary_green"
                android:textSize="24sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/deleteSoundBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/delete_image_if_set"
                    android:scaleType="fitXY"
                    android:src="@drawable/delete"
                    app:layout_constraintBottom_toBottomOf="@+id/setImageBtn"
                    app:layout_constraintStart_toStartOf="@+id/wordImage"
                    app:layout_constraintTop_toTopOf="@+id/setImageBtn" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/resetSoundBtn"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_back"
                    android:padding="0dp"
                    android:text="@string/set_sound"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_back"
                    android:textSize="24sp"
                    app:backgroundTint="@null"
                    app:layout_constraintEnd_toEndOf="@+id/wordImage"
                    app:layout_constraintTop_toBottomOf="@+id/wordImage" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/playSoundBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/delete_image_if_set"
                    android:scaleType="fitXY"
                    android:src="@drawable/sound"
                    app:layout_constraintBottom_toBottomOf="@+id/setImageBtn"
                    app:layout_constraintStart_toStartOf="@+id/wordImage"
                    app:layout_constraintTop_toTopOf="@+id/setImageBtn" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:id="@+id/addWordBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_back"
                android:text="@string/add"
                android:textAllCaps="false"
                android:textColor="@color/primary_back"
                android:textSize="24sp"
                app:backgroundTint="@null" />

        </LinearLayout>

    </ScrollView>


    <include
        android:id="@+id/loading"
        layout="@layout/fragment_loading"
        android:visibility="invisible"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>